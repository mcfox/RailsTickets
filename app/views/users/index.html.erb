<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Full name</th>
    <th>Company</th>
    <th>Time zone</th>
    <th>Active</th>
    <th>Admin</th>
    <th>Email notifications</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.full_name %></td>
    <td><%= user.company_id %></td>
    <td><%= user.time_zone %></td>
    <td><%= user.active %></td>
    <td><%= user.admin %></td>
    <td><%= user.email_notifications %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

